# Modifer keys
set $mod Mod4
set $smod Shift

# Autostartup
#  Start XDG autostart .desktop files using dex.
exec --no-startup-id dex --autostart --environment i3
#  i3lock setup
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork
#  NetworkManager
exec --no-startup-id nm-applet

# Theme
font pango:DejaVu Sans Mono 11
set $bar_bg #3B3B3B
set $bar_statusline #FFFFFF
set $bar_separator #FFFFFF
set $bar_focused_workspace_bg #A3BE8C
set $bar_focused_workspace_fg #3B3B3B
set $bar_active_workspace_bg #EBCB8B
set $bar_active_workspace_fg #3B3B3B
set $bar_inactive_workspace_bg #BF616A
set $bar_inactive_workspace_fg #3B3B3B
set $bar_urgent_workspace_bg #D08770
set $bar_urgent_workspace_fg #3B3B3B
#  Builtin colors
# class  border background text indicator child_border
client.focused #0F0F0F #0F0F0F #FFFFFF #0F0F0F
client.focused_inactive #0F0F0F #0F0F0F #FFFFFF #0F0F0F
client.unfocused #3B3B3B #3B3B3B #FFFFFF #3B3B3B
client.background #0F0F0F
# Application
set $wm_app_launcher "rofi -modi drun,run -show drun"
set $wm_app_terminal i3-sensible-terminal
set $wm_app_browser google-chrome-stable

#  Applications
# Start a terminal
bindsym $mod+Return exec $wm_app_terminal
# Start a program launcher
bindsym $mod+d exec $wm_app_launcher
# Start a web browser
bindsym $mod+$smod+Return exec $wm_app_browser

# Kill focused window
bindsym $mod+q kill

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# Move tiling windows via drag & drop by left-clicking into the title bar,
tiling_drag modifier titlebar

# Pipewire-pulse
bindsym XF86AudioMute exec pactl set-sink-mute 0 toggle
bindsym XF86AudioMute --release exec pkill -RTMIN+1 i3blocks
bindsym XF86AudioLowerVolume exec pactl set-sink-volume 0 -5%
bindsym XF86AudioLowerVolume --release exec pkill -RTMIN+1 i3blocks
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume 0 +5%
bindsym XF86AudioRaiseVolume --release exec pkill -RTMIN+1 i3blocks

# Media player controls
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioPause exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# Change focus (Alternatively, you can use the cursor keys)
bindsym $mod+j focus left
bindsym $mod+Left focus left
bindsym $mod+k focus down
bindsym $mod+Down focus down
bindsym $mod+i focus up
bindsym $mod+Up focus up
bindsym $mod+l focus right
bindsym $mod+Right focus right

# Move focused window (Alternatively, you can use the cursor keys)
bindsym $mod+$smod+j move left
bindsym $mod+$smod+Left move left
bindsym $mod+$smod+k move down
bindsym $mod+$smod+Down move down
bindsym $mod+$smod+i move up
bindsym $mod+$smod+Up move up
bindsym $mod+$smod+l move right
bindsym $mod+$smod+Right move right

# Split in horizontal orientation
bindsym $mod+h split h
# Split in vertical orientation
bindsym $mod+v split v


# Enter fullscreen mode for the focused container
bindsym $mod+f fullscreen
# Toggle between tiling and floating
bindsym $mod+$smod+f floating toggle
# Change focus between tiling and floating windows
bindsym $mod+space focus mode_toggle

# Change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split
# Focus the parent container
bindsym $mod+a focus parent
# Focus the child container
#bindsym $mod+d focus child

# Switch to workspace ($smod moves focused containers to workspace)
bindsym $mod+1 workspace 1
bindsym $mod+$smod+1 move container to workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+$smod+2 move container to workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+$smod+3 move container to workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+$smod+4 move container to workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+$smod+5 move container to workspace 5
bindsym $mod+6 workspace 6
bindsym $mod+$smod+6 move container to workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+$smod+7 move container to workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+$smod+8 move container to workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+$smod+9 move container to workspace 9
bindsym $mod+0 workspace 10
bindsym $mod+$smod+0 move container to workspace 10

# Reload the configuration file
bindsym $mod+Shift+c reload
# Restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# Exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym i resize shrink height 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # Same bindings, but for the arrow keys
        # Back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
	position bottom
        status_command i3blocks
	
	colors {
		background $bar_bg
		statusline $bar_statusline
		separator $bar_separator
		
		focused_workspace $bar_focused_workspace_bg $bar_focused_workspace_bg $bar_focused_workspace_fg
		active_workspace $bar_active_workspace_bg $bar_active_workspace_bg $bar_active_workspace_fg
                inactive_workspace $bar_inactive_workspace_bg $bar_inactive_workspace_bg $bar_inactive_workspace_fg
		urgent_workspace $bar_urgent_workspace_bg $bar_urgent_workspace_bg $bar_urgent_workspace_fg
	}
}

